{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "src/",
          "files": [
            "InstaPoker.Client/*.csproj",
			"InstaPoker.Server/*.csproj",
			"InstaPoker.Client/bin/Debug/net10.0/SubC.AllegroDotNet.dll"
          ]
        }
      ],
	  "namespaceLayout": "nested",
	  "memberLayout": "samePage",
	  "outputFormat": "mref",
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
		  "toc.yml",
          "docs/**/*.{md,yml}",
		  "api/toc.yml",
		  "api/**/*.yml"
        ],
		"exclude": [
		  "_site/"
		]
      }
    ],
    "resource": [
      {
		"src": "images/",
        "files": [
          "**/*.png",
		  "**/*.jpg",
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": " Poker Docs",
	  "_appLogoPath": "logo-50.png",
	  "_appFaviconPath": "logo-50.png",
      "_appTitle": "Poker Docs",
      "_enableSearch": true,
      "pdf": false
    },
    "xref": [
      "https://learn.microsoft.com/en-us/dotnet/.xrefmap.json"
    ]
  }
}