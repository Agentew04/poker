{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "src/",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
	  "namespaceLayout": "nested",
	  "memberLayout": "samePage",
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
		  "toc.yml",
          "**/*.{md,yml}"
        ]
      }
    ],
    "resource": [
      {
		"src": "images/",
        "files": [
          "**/*.png",
		  "**/*.jpg",
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "InstaPoker Documentation",
	  "_appLogoPath": "images/logo.png",
      "_appTitle": "InstaPoker Documentation",
      "_enableSearch": true,
      "pdf": false
    }
  }
}